<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.picodiploma.jetpacksubmissiontiga">
    <!-- Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackSubmissionSatu">
        <activity android:name=".favorite.tv.ActivityFavoriteTv"
            android:label="@string/favorite__tv_menu"/>
        <activity
            android:name=".favorite.movie.ActivityFavoriteMovie"
            android:label="@string/favorite_movie_menu" />
        <activity
            android:name=".main.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.DetailFilmActivity"
            android:label="@string/detail_menu" />
        <activity android:name=".main.MainActivity" />
    </application>

</manifest>